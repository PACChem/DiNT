set encoding iso_8859_1
set term postscript eps enhanced color "Times-Roman, 12"
set output "test.eps"

unset key

set xlabel "R, A" font "Arial,20"
set ylabel "V, cm-1" font "Arial,20"

set format x "%5.1f" 
set format y "%5.0f"

set xtics font "Arial,16"
set ytics font "Arial,16"

set size 1., 1.
set origin 0., 0.

set multiplot
set xrange [3.:6]
set yrange [*:40]
set size 1., .5
set origin 0., 0.
set style data points
plot 'ai.dat' u 1:2 lt 1 title "Cut 1", \
     'ai.dat' u 1:3 lt 2 title "Cut 2", \
     'ai.dat' u 1:4 lt 3 title "Cut 3", \
     'ai.dat' u 1:5 lt 4 title "Cut 4", \
     'ai.dat' u 1:6 lt 5 title "Cut 5", \
     'ai.dat' u 1:7 lt 6 title "Cut 6", \
     'fit.dat' u 1:2 with lines lt 1 lw 2 smooth csplines title "", \
     'fit.dat' u 1:3 with lines lt 2 lw 2 smooth csplines title "", \
     'fit.dat' u 1:4 with lines lt 3 lw 2 smooth csplines title "", \
     'fit.dat' u 1:5 with lines lt 4 lw 2 smooth csplines title "", \
     'fit.dat' u 1:6 with lines lt 5 lw 2 smooth csplines title "", \
     'fit.dat' u 1:7 with lines lt 6 lw 2 smooth csplines title ""

set xrange [2.5:5]
set yrange [*:2500]
set size 1., .5
set origin 0., .5
plot 'ai.dat' u 1:2 lt 1 title "Cut 1", \
     'ai.dat' u 1:3 lt 2 title "Cut 2", \
     'ai.dat' u 1:4 lt 3 title "Cut 3", \
     'ai.dat' u 1:5 lt 4 title "Cut 4", \
     'ai.dat' u 1:6 lt 5 title "Cut 5", \
     'ai.dat' u 1:7 lt 6 title "Cut 6", \
     'fit.dat' u 1:2 with lines lt 1 lw 2 smooth csplines title "", \
     'fit.dat' u 1:3 with lines lt 2 lw 2 smooth csplines title "", \
     'fit.dat' u 1:4 with lines lt 3 lw 2 smooth csplines title "", \
     'fit.dat' u 1:5 with lines lt 4 lw 2 smooth csplines title "", \
     'fit.dat' u 1:6 with lines lt 5 lw 2 smooth csplines title "", \
     'fit.dat' u 1:7 with lines lt 6 lw 2 smooth csplines title ""



